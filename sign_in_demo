        <div class="form-container">
            <!-- Sign In Form -->
            <div id="signin-form" class="form-content active">
                <h1>Welcome Back</h1>
                <p>Sign in to your account to continue</p>
                
                <form id="signinForm">
                    <div class="form-group">
                        <label for="signin-email">Email</label>
